<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/out_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_sorry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@mipmap/sorry"
            />

        <TextView
            android:id="@+id/tv_tishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_sorry"
            android:layout_alignParentStart="true"
            android:background="@mipmap/game_over"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tishi"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="得分："
            android:textColor="@color/colorAccent"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/max_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="历史记录："
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_below="@+id/max_score"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/restart"
            android:textSize="30sp" />


    </RelativeLayout>
</FrameLayout>
