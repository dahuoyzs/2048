<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mainbcakground"
    tools:context="com.bigfire.game1.mygame1.Main">

    <Button
        android:id="@+id/btn_four"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:background="@mipmap/afour"
        android:onClick="four" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_four"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@mipmap/afive"
        android:onClick="five" />

    <Button
        android:id="@+id/btn_wite"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btn_five"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="wite"
        android:background="@mipmap/aa" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_wite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="         提示：内有彩蛋\n1%概率出现,自己发现吧"
        android:textColor="@color/colorAccent"
        />

    <ImageView
        android:id="@+id/img_hz"
        android:layout_width="114dp"
        android:layout_height="162dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/hz"
        android:onClick="hz" />
</RelativeLayout>
