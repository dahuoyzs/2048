<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/greenback"
    tools:context="com.bigfire.game1.mygame1.MainActivity">

    <RelativeLayout
        android:id="@+id/line1_socre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/btn_left"
            android:layout_alignParentRight="true"

            />
        <TextView
            android:id="@+id/star"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=""
            android:background="@mipmap/star"
            android:textSize="30dp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/main_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/star"
            android:layout_marginEnd="20dp"
            android:text=""
            android:layout_marginTop="4dp"
            android:textColor="#fff"
            android:textSize="30dp" />
    </RelativeLayout>

